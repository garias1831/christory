#: import NoTransition kivy.uix.screenmanager.NoTransition
ScreenManager:
    transition: NoTransition()
    TitleScreen:
    MainGameScreen:


<TitleScreen>
    name: 'Title'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Christory'
            font_size: '100dp'
            size_hint: 1, 0.6
        Button:
            text: 'New Game'
            size_hint: 1, 0.2
            on_press: root.get_base_map()
            on_release: app.root.current = 'MainGame'
        Button:
            text: 'Load Game'
            size_hint: 1, 0.2


<MainGameScreen>
    name: 'MainGame'
    on_pre_enter: game_map.add_provinces()
    BoxLayout:
        orientation: 'vertical'
        StackLayout:
            orientation: 'rl-tb'
            size_hint: 1, 0.1 #This might not work as intended, so ill have to troubleshoot later
            canvas.before:
                Color:
                    rgba: (69/255, 204/255, 195/255, 1) # I'm actually a monkey, SET IT LIKE THIS FROM NOW ON (r/255. g/255 etc) bc thats how it works
                Rectangle:
                    pos: self.pos
                    size: self.size
            Button:
                text: 'Next Turn'
                size_hint: 0.3, 1

            Button:
                text: 'Save Game'
                size_hint: 0.1, 1
            Button:
                text: 'Exit'
                size_hint: 0.1, 1
                on_release: app.root.current = 'Title'
            
        GameMap:
            #This id will be used to get a direct reference to this GameMap. 
            id: game_map
            orientation: 'lr-tb'
            #Button:
             #   size_hint: 0.07, 0.1
              #  text:'plac'
            #Button:
             #   size_hint: 0.07, 0.1
              #  text:'sf'
        
